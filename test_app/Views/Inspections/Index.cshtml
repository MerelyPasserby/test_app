@model test_app.ViewModels.InspectionViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Огляди</h1>

<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <input asp-for="SearchByRegNum" class="form-control" placeholder="Пошук за номером авто" />
    </div>
    <div class="col-md-3">
        <input asp-for="SearchByClientName" class="form-control" placeholder="Пошук за клієнтом" />
    </div>
    <div class="col-md-3">
        <select asp-for="DateFilter" asp-items="Model.AvailableDateFilters" class="form-select">
            <option value="">Без фільтру</option>
        </select>
    </div>
    <div class="col-md-3">
        <select asp-for="SortOrder" asp-items="Model.SortOptions" class="form-select">
            <option value="">Без сортування</option>
        </select>
    </div>

    <div class="d-flex gap-2 mt-2">
        <button type="submit" class="btn btn-primary">Застосувати</button>
        <a asp-action="Index" class="btn btn-secondary">Скинути</a>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">+ Додати огляд</a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(_ => Model.Inspections.First().ClientCarId)</th>
            <th>@Html.DisplayNameFor(_ => Model.Inspections.First().InspectionDate)</th>
            <th>@Html.DisplayNameFor(_ => Model.Inspections.First().Results)</th>
            <th>@Html.DisplayNameFor(_ => Model.Inspections.First().Cost)</th>
            <th>@Html.DisplayNameFor(_ => Model.Inspections.First().IsPaid)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Inspections)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ClientCar.DisplayName)</td>
                <td>@Html.DisplayFor(modelItem => item.InspectionDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Results)</td>
                <td>@Html.DisplayFor(modelItem => item.Cost)</td>
                <td>@Html.DisplayFor(modelItem => item.IsPaid)</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Редагувати</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Деталі</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Видалити</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>



























