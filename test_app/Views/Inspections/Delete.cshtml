@model test_app.Models.Inspection

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4">Видалити огляд</h1>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <h5 class="mb-3 text-danger">Are you sure you want to delete this inspection?</h5>
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ClientCarId)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ClientCar.DisplayName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.InspectionDate)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.InspectionDate)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Results)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Results)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cost)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Cost)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsPaid)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IsPaid)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>





















