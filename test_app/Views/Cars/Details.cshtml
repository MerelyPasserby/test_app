@model test_app.Models.Car

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Деталі авто</h1>

<div class="card shadow-sm border-0">
    <div class="card-body">        
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Brand)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Brand)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Model)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Model)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.YearFrom)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.YearFrom)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.YearTo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.YearTo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Engine)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Engine)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Transmission)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Transmission)</dd>
        </dl>
        
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
        </div>        
        
    </div>
</div>
























