@model test_app.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Авто</h1>

<form method="get" class="mb-4 row g-2">
    <div class="col-md-4">
        <input asp-for="SearchString" class="form-control" placeholder="Пошук за маркою або моделлю" />
    </div>
    <div class="col-md-3">
        <select asp-for="YearRange" class="form-select" asp-items="Model.AvailableYearRanges">
            <option value="">Всі роки</option>
        </select>
    </div>
    <div class="col-md-3">
        <select asp-for="SortOrder" class="form-select" asp-items="Model.AvailableSortOrders">
            <option value="">Без сортування</option>
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Застосувати</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Скинути</a>
    </div>    
</form>

<p>
    <a asp-action="Create" class="btn btn-success">+ Додати авто</a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(_ => Model.Cars.First().Brand)</th>
            <th>@Html.DisplayNameFor(_ => Model.Cars.First().Model)</th>
            <th>@Html.DisplayNameFor(_ => Model.Cars.First().YearFrom)</th>
            <th>@Html.DisplayNameFor(_ => Model.Cars.First().YearTo)</th>
            <th>@Html.DisplayNameFor(_ => Model.Cars.First().Engine)</th>
            <th>@Html.DisplayNameFor(_ => Model.Cars.First().Transmission)</th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cars)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                <td>@Html.DisplayFor(modelItem => item.Model)</td>
                <td>@Html.DisplayFor(modelItem => item.YearFrom)</td>
                <td>@Html.DisplayFor(modelItem => item.YearTo)</td>
                <td>@Html.DisplayFor(modelItem => item.Engine)</td>
                <td>@Html.DisplayFor(modelItem => item.Transmission)</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Редагувати</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Деталі</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Видалити</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>




















