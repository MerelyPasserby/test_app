@model test_app.ViewModels.ClientCarViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Автомобілі клієнтів</h1>

<form method="get" class="mb-4 row g-3 align-items-end">
    <div class="col-md-4">        
        <input asp-for="SearchByRegNum" class="form-control" placeholder="Пошук за номером" />
    </div>
    <div class="col-md-4">        
        <input asp-for="SearchByClientName" class="form-control" placeholder="Пошук за ПІБ клієнта" />
    </div>
    <div class="col-md-4">        
        <select asp-for="SortOrder" asp-items="Model.SortOptions" class="form-select">
            <option value="">Без сортування</option>
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Застосувати</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Скинути</a>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">+ Додати авто клієнта</a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(_ => Model.ClientCars.First().Vin)</th>
            <th>@Html.DisplayNameFor(_ => Model.ClientCars.First().RegistrationNum)</th>
            <th>@Html.DisplayNameFor(_ => Model.ClientCars.First().CarId)</th>
            <th>@Html.DisplayNameFor(_ => Model.ClientCars.First().ClientId)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ClientCars)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Vin)</td>
                <td>@Html.DisplayFor(modelItem => item.RegistrationNum)</td>
                <td>@Html.DisplayFor(modelItem => item.Car.DisplayName)</td>
                <td>@Html.DisplayFor(modelItem => item.Client.DisplayName)</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Редагувати</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Деталі</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Видалити</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>




















