@model test_app.Models.Task

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4">Видалити завдання</h1>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <h5 class="mb-3 text-danger">Are you sure you want to delete this task?</h5>
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.InspectionId)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Inspection.DisplayName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TaskTypeId)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TaskType.DisplayName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CompletedAt)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CompletedAt)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Comment)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Comment)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TotalCost)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalCost)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsPaid)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IsPaid)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>




















