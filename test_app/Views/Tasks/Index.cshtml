@model test_app.ViewModels.TaskViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Завдання</h1>

<form method="get" class="mb-4 row g-2">
    <div class="col-md-4">
        <input asp-for="SearchCar" class="form-control" placeholder="Пошук за авто клієнта" />
    </div>
    <div class="col-md-4">
        <input asp-for="SearchTaskType" class="form-control" placeholder="Пошук за типом завдання" />
    </div>
    <div class="col-md-4">
        <select asp-for="DateRange" class="form-select" asp-items="Model.AvailableDateRanges">
            <option value="">Без фільтру</option>
        </select>
    </div>
    <div class="col-md-4">
        <select asp-for="CompletionFilter" class="form-select" asp-items="Model.AvailableCompletionFilters">
            <option value="">Без фільтру</option>
        </select>
    </div>
    <div class="col-md-3">
        <select asp-for="PaymentFilter" class="form-select" asp-items="Model.AvailablePaymentFilters">
            <option value="">Без фільтру</option>
        </select>
    </div>

    <div class="col-md-3">
        <select asp-for="SortOrder" class="form-select" asp-items="Model.AvailableSortOrders">
            <option value="">Без сортування</option>
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Застосувати</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Скинути</a>
    </div>
</form>


<p>
    <a asp-action="Create" class="btn btn-success">+ Додати</a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(_ => Model.Tasks.First().InspectionId)</th>
            <th>@Html.DisplayNameFor(_ => Model.Tasks.First().TaskTypeId)</th>
            <th>@Html.DisplayNameFor(_ => Model.Tasks.First().CreatedAt)</th>
            <th>@Html.DisplayNameFor(_ => Model.Tasks.First().CompletedAt)</th>
            <th>@Html.DisplayNameFor(_ => Model.Tasks.First().Comment)</th>
            <th>@Html.DisplayNameFor(_ => Model.Tasks.First().TotalCost)</th>
            <th>@Html.DisplayNameFor(_ => Model.Tasks.First().IsPaid)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tasks)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Inspection.DisplayName)</td>
                <td>@Html.DisplayFor(modelItem => item.TaskType.DisplayName)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>@Html.DisplayFor(modelItem => item.CompletedAt)</td>
                <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalCost)</td>
                <td>@Html.DisplayFor(modelItem => item.IsPaid)</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Редагувати</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Деталі</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Видалити</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>




















