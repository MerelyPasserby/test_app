@model test_app.ViewModels.TaskTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Типи завдань</h1>

<form method="get" class="mb-4 row g-2">
    <div class="col-md-4">
        <input asp-for="SearchName" class="form-control" placeholder="Пошук за назвою типу завдання" />
    </div>
    <div class="col-md-3">
        <select asp-for="NormHoursFilter" class="form-select" asp-items="Model.AvailableNormHoursFilters">
            <option value="">Без фільтру</option>
        </select>
    </div>
    <div class="col-md-3">
        <select asp-for="SortOrder" class="form-select" asp-items="Model.AvailableSortOrders">
            <option value="">Без сортування</option>
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Застосувати</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Скинути</a>
    </div>
</form>


<p>
    <a asp-action="Create" class="btn btn-success">+ Додати</a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(_ => Model.TaskTypes.First().Name)</th>
            <th>@Html.DisplayNameFor(_ => Model.TaskTypes.First().NormTime)</th>
            <th>@Html.DisplayNameFor(_ => Model.TaskTypes.First().LaborCost)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TaskTypes)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.NormTime)</td>
                <td>@Html.DisplayFor(modelItem => item.LaborCost)</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Редагувати</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Деталі</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Видалити</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>




















