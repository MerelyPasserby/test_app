@model test_app.ViewModels.PartCompatibilityViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Сумісність деталей</h1>

<form method="get" class="mb-4 row g-2">
    <div class="col-md-4">
        <input asp-for="SearchPartName" class="form-control" placeholder="Пошук по деталі" />
    </div>
    <div class="col-md-4">
        <input asp-for="SearchCarName" class="form-control" placeholder="Пошук по авто" />
    </div>    
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Застосувати</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Скинути</a>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">+ Додати</a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(_ => Model.PartCompatibilities.First().CarId)</th>
            <th>@Html.DisplayNameFor(_ => Model.PartCompatibilities.First().PartId)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PartCompatibilities)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Car.DisplayName)</td>
                <td>@Html.DisplayFor(modelItem => item.Part.DisplayName)</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Редагувати</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Деталі</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Видалити</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>





















