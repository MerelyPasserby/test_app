@model test_app.Models.PartSupplier

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Деталі постачання запчастини</h1>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PartId)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Part.DisplayName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SupplierId)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Supplier.DisplayName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Availability)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Availability)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DeliveryTimeDays)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DeliveryTimeDays)</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>






















