@model test_app.ViewModels.PartSupplierViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Постачальники деталей</h1>

<form method="get" class="mb-4 row g-2">
    <div class="col-md-4">
        <input asp-for="SearchPartName" class="form-control" placeholder="Пошук за назвою деталі" />
    </div>
    <div class="col-md-4">
        <input asp-for="SearchSupplierName" class="form-control" placeholder="Пошук за постачальником" />
    </div>
    <div class="col-md-4">
        <select asp-for="AvailabilityFilter" class="form-select" asp-items="Model.AvailableAvailabilityFilters">
            <option value="">Без фільтру</option>
        </select>
    </div>
    <div class="col-md-3">
        <select asp-for="SortOrder" class="form-select" asp-items="Model.AvailableSortOrders">
            <option value="">Без сортування</option>
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Застосувати</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Скинути</a>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">+ Додати запис</a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(_ => Model.PartSuppliers.First().PartId)</th>
            <th>@Html.DisplayNameFor(_ => Model.PartSuppliers.First().SupplierId)</th>
            <th>@Html.DisplayNameFor(_ => Model.PartSuppliers.First().Price)</th>
            <th>@Html.DisplayNameFor(_ => Model.PartSuppliers.First().Availability)</th>
            <th>@Html.DisplayNameFor(_ => Model.PartSuppliers.First().DeliveryTimeDays)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PartSuppliers)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Part.DisplayName)</td>
                <td>@Html.DisplayFor(modelItem => item.Supplier.DisplayName)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Availability)</td>
                <td>@Html.DisplayFor(modelItem => item.DeliveryTimeDays)</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Редагувати</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Деталі</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Видалити</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
























