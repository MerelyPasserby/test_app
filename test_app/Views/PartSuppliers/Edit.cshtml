@model test_app.Models.PartSupplier

@{
    ViewData["Title"] = "Edit";
}

<h1 class="form-title">Редагувати постачальника деталі</h1>

<div class="form-container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="PartId" class="form-label"></label>
            <select asp-for="PartId" class="form-control" asp-items="@ViewData["PartId"] as SelectList"></select>
            <span asp-validation-for="PartId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SupplierId" class="form-label"></label>
            <select asp-for="SupplierId" class="form-control" asp-items="@ViewData["SupplierId"] as SelectList"></select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Availability" class="form-label"></label>
            <select asp-for="Availability" class="form-control" asp-items="@ViewData["AvailabilityOptions"] as SelectList"></select>
            <span asp-validation-for="Availability" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DeliveryTimeDays" class="form-label"></label>
            <input asp-for="DeliveryTimeDays" class="form-control" />
            <span asp-validation-for="DeliveryTimeDays" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">Назад</a>
            <input type="submit" value="Зберегти" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}















