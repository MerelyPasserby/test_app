@model test_app.ViewModels.PartViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Деталі</h1>

<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <input asp-for="SearchByName" class="form-control" placeholder="Пошук за назвою" />
    </div>
    <div class="col-md-3">
        <input asp-for="SearchByArticle" class="form-control" placeholder="Пошук за артикулом" />
    </div>
    <div class="col-md-3">
        <select asp-for="PriceFilter" asp-items="Model.AvailablePriceFilters" class="form-select">
            <option value="">Без фільтру</option>
        </select>
    </div>
    <div class="col-md-3">
        <select asp-for="SortOrder" asp-items="Model.SortOptions" class="form-select">
            <option value="">Без сортування</option>
        </select>
    </div>

    <div class="d-flex gap-2 mt-2">
        <button type="submit" class="btn btn-primary">Застосувати</button>
        <a asp-action="Index" class="btn btn-secondary">Скинути</a>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">+ Додати деталь</a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(_ => Model.Parts.First().Name)</th>
            <th>@Html.DisplayNameFor(_ => Model.Parts.First().Article)</th>
            <th>@Html.DisplayNameFor(_ => Model.Parts.First().StockQuantity)</th>
            <th>@Html.DisplayNameFor(_ => Model.Parts.First().Price)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Parts)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Article)</td>
                <td>@Html.DisplayFor(modelItem => item.StockQuantity)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Редагувати</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Деталі</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Видалити</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>




















