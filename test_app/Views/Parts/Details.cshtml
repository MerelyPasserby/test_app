@model test_app.Models.Part

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Деталі запчастини</h1>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Article)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Article)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StockQuantity)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.StockQuantity)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>























