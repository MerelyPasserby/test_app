@model test_app.Models.PartsToTask

@{
    ViewData["Title"] = "Create";
}

<h1 class="form-title">Додати запчастину до завдання</h1>

<div class="form-container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <input type="hidden" asp-for="PriceAtUse" value="1" />

        <div class="mb-3">
            <label asp-for="TaskId" class="form-label"></label>
            <select asp-for="TaskId" class="form-control" asp-items="@ViewData["TaskId"] as SelectList"></select>
        </div>

        <div class="mb-3">
            <label asp-for="PartId" class="form-label"></label>
            <select asp-for="PartId" class="form-control" asp-items="@ViewData["PartId"] as SelectList"></select>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">Назад</a>
            <input type="submit" value="Створити" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}










