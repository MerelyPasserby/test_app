@model test_app.Models.PartsToTask

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Деталі використання запчастини</h1>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PartId)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Part.DisplayName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TaskId)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Task.DisplayName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Quantity)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PriceAtUse)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PriceAtUse)</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>


















